<%# 記事をレンダリング %>
$("#allListWrap").append(
  "<%= j(
    render 'home/list',
    items: @items
  ) %>"
);
<%# ボタンのパラメーターを変更 %>
$("#loadLinkAll").html(
  "<%= j(
    link_to "もっと見る", root_path(page: @page_num.to_i + 1, q: { title_cont: @q.title_cont }), id: "loadLinkAll", class: "btn btn-success", remote: true
  ) %>"
);

<%# 番号を付与 %>
$(function() {
  let counter = 1;
  $(".number-icon").each(function(){
    $(this).text(`No.${counter}`)
    counter++;
  });
});