<div class="container-lg">
  <h4 class="text-center py-3 font-weight-bold">Qiita記事（ランキング）</h4>
  <!-- 検索 -->
  <%= search_form_for @q, url: root_path, html: {class: "text-center mb-3"} do |f| %>
    <%= f.text_field :title_cont, placeholder: 'タイトルで検索', class: "text-muted font-weight-bold fs-09 title-form border-0 py-2 px-5 rounded-pill text-center" %>
    <%= f.submit '検索', class: "d-none" %>
  <% end %>

  <!-- タブナビゲーション -->
  <ul class="nav nav-tabs mb-3 justify-content-center" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="#ex1-tabs-1" role="tab" aria-controls="ex1-tabs-1" aria-selected="true" >今日</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="ex1-tab-2" data-mdb-toggle="tab" href="#ex1-tabs-2" role="tab" aria-controls="ex1-tabs-2" aria-selected="false" >3日間</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="ex1-tab-3" data-mdb-toggle="tab" href="#ex1-tabs-3" role="tab" aria-controls="ex1-tabs-3" aria-selected="false" >全期間</a>
    </li>
  </ul>
  <!-- タブコンテンツ -->
  <div class="tab-content" id="ex1-content">
    <!-- 今日 -->
    <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel" aria-labelledby="ex1-tab-1" >
      <!-- 一覧 -->
      <div id="todayListWrap" class="d-flex flex-wrap">
        <%= render partial: 'list', locals: { items: @today_items, type: "today" } %>
      </div>
      <!-- 読み込みボタン -->
      <div id="loadLinkToday" class="py-5 text-center">
        <%= link_to "もっと見る", root_path(page: "2", type: "today", q: { title_cont: @q.title_cont }), class: "btn btn-success", remote: true %>
      </div>
    </div>
    <!-- 3日間 -->
    <div class="tab-pane fade" id="ex1-tabs-2" role="tabpanel" aria-labelledby="ex1-tab-2">
      <!-- 一覧 -->
      <div id="threeDaysListWrap" class="d-flex flex-wrap">
        <%= render partial: 'list', locals: { items: @three_days_items, type: "three_days" } %>
      </div>
      <!-- 読み込みボタン -->
      <div id="loadLinkThreeDays" class="py-5 text-center">
        <%= link_to "もっと見る", root_path(page: "2", type: "three_days", q: { title_cont: @q.title_cont }), class: "btn btn-success", remote: true %>
      </div>
    </div>
    <!-- 全期間 -->
    <div class="tab-pane fade" id="ex1-tabs-3" role="tabpanel" aria-labelledby="ex1-tab-3">
      <!-- 一覧 -->
      <div id="allListWrap" class="d-flex flex-wrap">
        <%= render partial: 'list', locals: { items: @all_items, type: "all" } %>
      </div>
      <!-- 読み込みボタン -->
      <div id="loadLinkAll" class="py-5 text-center">
        <%= link_to "もっと見る", root_path(page: "2", type: "all", q: { title_cont: @q.title_cont }), class: "btn btn-success", remote: true %>
      </div>
    </div>
  </div>
</div>